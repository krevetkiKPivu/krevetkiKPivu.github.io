const signCount = (arr) => {
	let posNum = 0;
	let negNum = 0;
	const largestString;
	for (let i = 0; i <= arr.length; i++) {
		if (arr[i] > 0) {
			posNum += posNum;
		} else {
			negNum += negNum;
		} 
	if (posNum == 0) {
		largestString = 0;
	} else if (posNum > 0 && negNum == 0) {
		for (i = 0; i <= arr.length; i++) {
			largestString = largeststring + arr[i]; 
	} return largestString = undefined; 
};
			

